{
  "name": "nabladelta",
  "version": "0.3.0",
  "description": "Lambdadelta Event Feed Libraries",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc --build --verbose",
    "postbuild": "run-s copycircuits copytypes",
    "copycircuits": "copyfiles -u 2 ./packages/rln/compiled/** ./packages/rln/dist",
    "copytypes": "copyfiles -u 3 ./packages/lambdadelta/src/@types/** ./packages/lambdadelta/dist/src"
  },
  "workspaces": [
    "./packages/*"
  ],
  "author": "reilgun",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^20.1.7",
    "copyfiles": "^2.4.1",
    "jest": "^29.4.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1"
  }
}
